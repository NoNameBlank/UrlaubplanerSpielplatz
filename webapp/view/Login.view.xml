    <Page id="page" title="{i18n>title}">
        <content>
            <FlexBox class="sapUiResponsiveContentPadding" justifyContent="Center">
                <VBox>
                    <Label text="sympacon TS" design="H1" class="customH1class boldFont largeFont" />
                    <Label text="lalalalal TS" design="H1" class="customH1class boldFont largeFont" />
                
                <Input id="benutzerInput" type="Text" placeholder="Benutzername" />
                <Input id="passwordInput" type="Password" placeholder="Passwort" />
                <Button text="Login!" press="handleClick" design="Transparent" />

                </VBox>

                
            </FlexBox>
        </content>
    </Page>
</mvc:View>
